# Database Configuration
# PostgreSQL container settings
POSTGRES_DB=ong_db
POSTGRES_USER=user
POSTGRES_PASSWORD=password

# Backend database connection settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=user
DB_PASSWORD=password
DB_NAME=ong_db

# Full database URL (constructed from above variables)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# JWT Configuration
# Secret key for JWT token signing (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# LLM API Configuration
# URL for the LLM API service
# - Development: http://localhost:8000
# - Docker Compose: http://llm-api:8000/api/v1/parse-query-only
LLM_API_URL=http://localhost:8000

# Timeout in milliseconds for LLM API calls (default: 3000ms = 3 seconds)
LLM_TIMEOUT=3000

# OpenAI API Key for LLM integration (required for AI-powered search)
OPENAI_API_KEY=your-openai-api-key-here

# Observability Configuration (Phase 6)
# Logging level: 'error' | 'warn' | 'info' | 'debug'
LOG_LEVEL=info

# Enable structured JSON logging (recommended for production)
JSON_LOGGING=true